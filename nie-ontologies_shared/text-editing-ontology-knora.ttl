	rdfs:label "has glossator"@en, "hat Glossator"@de;
	rdfs:comment """Relating a text to a person who glossed it."""@en;
	rdfs:domain text:Text;
#	rdfs:range [rdfs:subClassOf human:Person, [a owl:Restriction; owl:onProperty human:personHasRole; owl:someValuesFrom text:Glossator]];
	rdfs:subPropertyOf knora-base:hasLinkTo;
